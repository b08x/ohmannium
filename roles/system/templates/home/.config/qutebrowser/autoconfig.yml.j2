config_version: 2
settings:
  bindings.commands:
    global:
      insert:
        <Alt+b>: fake-key <Ctrl-Left>
        <Alt+d>: fake-key <Ctrl-Delete>
        <Alt+f>: fake-key <Ctrl-Right>
        <Ctrl+a>: fake-key <Home>
        <Ctrl+b>: fake-key <Left>
        <Ctrl+d>: fake-key <Delete>
        <Ctrl+e>: fake-key <End>
        <Ctrl+f>: fake-key <Right>
        <Ctrl+h>: fake-key <Backspace>
        <Ctrl+k>: fake-key <Shift-End><Delete>
        <Ctrl+n>: fake-key <Down>
        <Ctrl+p>: fake-key <Up>
        <Ctrl+u>: fake-key <Shift-Home><Delete>
        <Ctrl+w>: fake-key <Ctrl-Backspace>
        <Ctrl+x><Ctrl+e>: open-editor
      normal:
        <Alt+Left>: tab-prev
        <Alt+Right>: tab-next
        <Left>: back
        <Right>: forward
        V: hint links spawn google-chrome-stable "{hint-url}"
        \: spawn dmenuhandler "{url}"
        gn: yank inline [[{url}][{title}]];; spawn kitty -e nvim -c 'call CreateCapture("e"
          , "qutebrowser")'
        v: hint links spawn funnel "{hint-url}"
        yo: yank inline [[{url}][{title}]]
  colors.webpage.darkmode.enabled:
    global: true
  colors.webpage.darkmode.threshold.text:
    global: 200
  colors.webpage.preferred_color_scheme:
    global: dark
  content.notifications.enabled:
    https://www.reddit.com: false
  input.insert_mode.auto_load:
    global: true
  url.searchengines:
    global:
      DEFAULT: https://search.brave.com/search?q={}
  url.start_pages:
    global: https://search.brave.com
  zoom.default:
    global: 75%
